<h2>Client Login</h2>

<a href="/">Home</a>

<br><br>
<div class="auth-forms">
<form action="/client-login" method="POST">

    <label> Email:
        <input type="email" name="email">
    </label>
    <label> Password:
        <input type="password" name="userPassword">
    </label>

    <button type="submit">Login</button>

    <br />
    {{#if errorMessage}}
        {{errorMessage}}
    {{/if}}
</form>
</div>